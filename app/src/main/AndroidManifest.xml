<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.courseproject">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.CourseProject">
        <activity
            android:name=".controllers.AlertActivity"
            android:exported="false" />

        <service
            android:name=".controllers.background.AlertService"
            android:exported="false" />

        <activity
            android:name=".controllers.ListAssessmentActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.AddAssessmentActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.DetailedAssessmentActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.DetailedCourseActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.AddCourseActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.DetailedTermActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.ListCoursesActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.AddTermActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.ListTermsActivity"
            android:exported="false" />
        <activity
            android:name=".controllers.HomeActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>